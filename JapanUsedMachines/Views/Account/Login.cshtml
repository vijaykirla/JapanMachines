
@model JapanUsedMachines.Core.User
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml";}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="col-sm-12 log-form">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form form-horizontal col-sm-5 col-sm-push-3" }))
            {
                <div class="form-group">
                    <label for="emailAddress" class="col-sm-4">User Name:</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-4">Password:</label>
                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="emailAddress" class="col-sm-4"></label>
                    <div class="col-sm-8">
                        <input type="submit" value="Login" class="btn btn-primary" />

                        <a href="#" class="fpwd pull-right">Forgotten Password?</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>